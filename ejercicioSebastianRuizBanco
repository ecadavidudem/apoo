class CuentaBancaria:

    def __init__(self, cantidad):
        self.cantidad = cantidad
    
    def agregar(self):
        return self.cantidad * 0.002

    def imprimir(self):
        print (self.cantidad)

Persona1 = CuentaBancaria(150000)

estado = Persona1.agregar()
print(f"Su cuota de manejo es: {estado}$")

